{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":automergeAll",
    ":enablePreCommit",
    ":preserveSemverRanges"
  ],
  "schedule": ["on the first day of the month"],
  "enabledManagers": ["github-actions", "pip_requirements", "pre-commit"],
  "github-actions": {
    "description": "Additionally monitor these files",
    "fileMatch": ["^template/\\.github/workflows/*"]
  },
  "pip_requirements": {
    "description": "Additionally monitor these files",
    "fileMatch": ["^template/\\.tools/requirements/*"]
  },
  "pre-commit": {
    "description": "Additionally monitor these files",
    "fileMatch": ["^bump/\\.pre-commit-config\\.yaml$"]
  },
  "packageRules": [
    {
      "description": "Check for typings and pyright updates all the time.",
      "matchManagers": ["pip_requirements"],
      "matchDepNames": ["pyright"],
      "schedule": ["at any time"],
      "automerge": false
    },
    {
      "description": "Pre-commit manages these requirements. Project repos manage pyright.",
      "matchManagers": ["pip_requirements"],
      "matchFiles": ["template/.tools/requirements/requirements_dev.txt"],
      "ignoreDeps": ["black", "ruff", "pyright"]
    }
  ]
}
