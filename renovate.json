{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":preserveSemverRanges",
    ":enablePreCommit"
  ],
  "automerge": true,
  "enabledManagers": [
    "npm",
    "pip_requirements",
    "poetry",
    "github-actions",
    "pre-commit"
  ],
  "pip_requirements": {
    "fileMatch": ["requirements.*\\.txt"]
  },
  "github-actions": {
    "fileMatch": ["^template/.github/workflows/*"]
  },
  "pre-commit": {
    "fileMatch": [
      "template/{% if not override_precommit %}.pre-commit-config.yaml{% endif %}.jinja"
    ]
  },
  "packageRules": [
    {
      "matchPaths": ["^template/.github/workflows/*"]
    },
    {
      "matchPaths": ["^.github/workflows/*"]
    },
    {
      "matchPaths": ["^template/.tools/requirements/*"]
    },
    {
      "matchFiles": [
        "template/{% if not override_precommit %}.pre-commit-config.yaml{% endif %}.jinja"
      ]
    }
  ]
}
