{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "automerge": true,
  "pip_requirements": {
    "fileMatch": ["requirements_*.txt"]
  },

  "packageRules": [
    {
      "groupName": ".github/workflows/bump_workflows.yml",
      "matchFiles": [".github/workflows/bump_workflows.yml"],
      "matchPackagePatterns": [".*"]
    },
    {
      "groupName": ".github/workflows/<except bump_workflows.yml>",
      "matchFiles": [
        ".github/workflows/bump.yml",
        ".github/workflows/changerelease.yml",
        ".github/workflows/codeql-analysis.yml",
        ".github/workflows/main.yml",
        ".github/workflows/publish.yml"
      ],
      "matchPackagePatterns": [".*"]
    },
    {
      "groupName": ".github/workflows/<except bump_workflows.yml>",
      "matchFiles": [
        ".github/workflows/bump.yml",
        ".github/workflows/changerelease.yml",
        ".github/workflows/codeql-analysis.yml",
        ".github/workflows/main.yml",
        ".github/workflows/publish.yml"
      ],
      "matchPackagePatterns": [".*"]
    },
    {
      "groupName": "template/.tools/requirements/*",
      "matchPaths": ["template/.tools/requirements"],
      "matchPackagePatterns": [".*"]
    }
  ]
}
