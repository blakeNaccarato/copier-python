{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":preserveSemverRanges",
    ":enablePreCommit"
  ],
  "automerge": true,
  "enabledManagers": [
    "npm",
    "pip_requirements",
    "poetry",
    "github-actions",
    "pre-commit"
  ],
  "pip_requirements": {
    "fileMatch": ["^template/tools/requirements/*"]
  },
  "github-actions": {
    "fileMatch": ["^template/.github/workflows/*"]
  },
  "pre-commit": {
    "fileMatch": ["^template/*.pre-commit-config.yaml*"]
  }
}
