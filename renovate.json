{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":preserveSemverRanges",
    ":enablePreCommit"
  ],
  "automerge": true,
  "enabledManagers": [
    "npm",
    "pip_requirements",
    "poetry",
    "github-actions",
    "pre-commit"
  ],
  "pip_requirements": {
    "fileMatch": ["requirements.*\\.txt"]
  },
  "packageRules": [
    {
      "groupName": ".github/workflows/*",
      "matchFiles": [".github/workflows/bump_precommit.yml"]
    },
    {
      "groupName": "bump/workflows/*",
      "matchPaths": ["bump/workflows/*"]
    },
    {
      "groupName": "template/.tools/requirements/*",
      "matchPaths": ["template/.tools/requirements/*"]
    },
    {
      "groupName": "bump/.pre-commit-config.yaml",
      "matchFiles": ["bump/.pre-commit-config.yaml"]
    }
  ]
}
