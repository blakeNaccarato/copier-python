{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":preserveSemverRanges", "group:allNonMajor"],
  "automerge": true,
  "enabledManagers": [
    "npm",
    "pip_requirements",
    "poetry",
    "github-actions",
    "pre-commit"
  ],
  "pip_requirements": {
    "fileMatch": ["requirements.*\\.txt"]
  },
  "pre-commit": {
    "enabled": true
  },
  "packageRules": [
    {
      "groupName": ".github/workflows/bump_workflows.yml",
      "matchFiles": [".github/workflows/bump_workflows.yml"]
    },
    {
      "groupName": ".github/workflows/<all except bump_workflows.yml>",
      "matchPaths": [".github/workflows"],
      "ignorePaths": [".github/workflows/bump_workflows.yml"]
    },
    {
      "groupName": "template/.tools/requirements",
      "matchPaths": ["template/.tools/requirements"]
    },
    {
      "groupName": "template/package.json",
      "matchFiles": ["template/package.json"]
    },
    {
      "groupName": "template/pre-commit-config.yaml",
      "matchFiles": [
        "template/{% if not override_precommit %}.pre-commit-config.yaml{% endif %}.jinja"
      ]
    }
  ]
}
