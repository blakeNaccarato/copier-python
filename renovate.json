{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    ":preserveSemverRanges",
    ":enablePreCommit"
  ],
  "gitIgnoredAuthors": ["github-action@users.noreply.github.com"],
  "automerge": true,
  "enabledManagers": ["pip_requirements", "github-actions", "pre-commit"],
  "pip_requirements": {
    "fileMatch": ["^template/\\.tools/requirements/*"]
  },
  "github-actions": {
    "fileMatch": ["^template/\\.github/workflows/*"]
  },
  "pre-commit": {
    "fileMatch": ["^bump/\\.pre-commit-config\\.yaml$"]
  }
}
