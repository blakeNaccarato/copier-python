[build-system]
requires = ["flit_core==3.9.0"]
build-backend = "flit_core.buildapi"

[project]
name = "{{ project_name }}_tools"
version = "0.0.0"
description = "Tools."
dependencies = [
    # ? Core script tools
    "copier==9.2.0",
    "cyclopts==2.9.3",
    "dulwich==0.22.1",
    "ipython==8.26.0",
    "pipx==1.6.0",
    "pydantic-settings>=2.4.0",
    "python-dotenv==1.0.1",
    "toml==0.10.2 ; python_version < '3.11'",
]
[project.scripts]
"{{ project_name }}-tools" = "{{ project_name }}_tools.__main__:main"
"{{ project_name }}_tools" = "{{ project_name }}_tools.__main__:main"

[tool.fawltydeps]
deps = ["scripts/pyproject.toml"]
code = ["scripts/{{ project_name }}_tools"]
ignore_undeclared = [
    "{{ project_name }}_docs",
    "{{ project_name }}_tests",
    "{{ project_name }}_tools",
    "{{ project_name }}",
]
ignore_unused = [
    # ? Core script tools
    "copier", # For template sync
    "pipx",   # For `pipx run` of scripts with dependencies isolated by PEP 723
    # ? Other deps
    "ipython", # Used for local experimentation
]
