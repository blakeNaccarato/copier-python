{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", ":preserveSemverRanges", "group:allNonMajor"],
  "automerge": true,
  "enabledManagers": ["pip_requirements"],
  "packageRules": [
    {
      "groupName": "package_requirements",
      "matchFiles": ["requirements.txt"]
    },
    {
      "groupName": "tooling",
      "matchFiles": [
        "template/.tools/requirements/project_specific/requirements_both.txt",
        "template/.tools/requirements/project_specific/requirements_cicd.txt",
        "template/.tools/requirements/project_specific/requirements_dev.txt",
        "template/.tools/requirements/project_specific/requirements_docs.txt"
      ]
    }
  ]
}
