name: "sphinx"

on:
  workflow_dispatch:
  push:
    branches: ["main"]
    paths: ["docs/**"]

permissions:
  contents: "read"
  pages: "write"
  id-token: "write"

concurrency:
  group: "pages"
  cancel-in-progress: true

jobs:
  build:
    runs-on: "{{ actions_runner }}"
    steps:
      - uses: "blakeNaccarato/copier-python-workflow-setup@v0.0.8"
        with:
          python-version: "{{ python_version }}"
      - run: python -m sphinx -T -E docs _site
      - uses: "actions/upload-pages-artifact@v1"
  deploy:
    environment:
      name: "github-pages"
      url: "{% raw %}${{ steps.deployment.outputs.page_url }}{% endraw %}"
    runs-on: "{{ actions_runner }}"
    needs: "build"
    steps:
      - id: "deployment"
        uses: "actions/deploy-pages@v1"
