name: "publish"
on:
  workflow_dispatch: {}
  release:
    types:
      - "published"
      - "released"

jobs:
  publish:
    runs-on: "{{ actions_runner }}"
    steps:
      - uses: "blakeNaccarato/copier-python-workflow-setup@v0.2.3"
        with:
          python-version: "{{ python_version }}"
          install-project: false
      - run: "flit publish"
        env:
          FLIT_USERNAME: "__token__"
          FLIT_PASSWORD: "{% raw %}${{ secrets.PYPI_TOKEN }}{% endraw %}"
